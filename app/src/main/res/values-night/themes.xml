<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Main.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@color/bg_testing</item>
    </style>

    <style name="Navigation.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="itemIconTint">@color/teal_200</item>
        <item name="itemTextColor">@color/teal_200</item>
    </style>

    <style name="Base.Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Base.Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>