<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="400dp"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="120dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="@string/celcius"
                android:textSize="50dp"
                android:textStyle="bold"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/text1"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/ic_location_foreground"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/image1"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginTop="14dp"
                android:text="@string/location"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_checked"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:layout_constraintStart_toEndOf="@id/image2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="7dp"
                android:text="@string/updated"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="400dp"
        android:layout_height="185dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/details"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_thermometer"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toEndOf="@id/image3"
                android:layout_marginTop="20dp"
                android:text="@string/max"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@mipmap/ic_rain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image3"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/image3"
                app:layout_constraintStart_toEndOf="@id/image4"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/percentage"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toEndOf="@id/text4"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_wind"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@id/image5"
                app:layout_constraintTop_toBottomOf="@id/text3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/speed"/>

            <TextView
                android:id="@+id/text7"
                android:layout_width="80dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/text6"
                app:layout_constraintStart_toEndOf="@id/image5"
                android:layout_marginStart="5dp"
                android:text="@string/wind"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="400dp"
        android:layout_height="185dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text8"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:text="@string/hourly"
                android:textSize="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/text8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/now"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_sunny"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image6"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/ten"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text9"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_cloudy"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image6"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text12"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image6"
                        app:layout_constraintStart_toEndOf="@id/text10"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text13"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/eleven"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text11"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_rain"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image7"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text14"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image7"
                        app:layout_constraintStart_toEndOf="@id/text12"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text15"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/twelve"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text13"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_rain"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image8"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text16"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image8"
                        app:layout_constraintStart_toEndOf="@id/text14"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text17"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/one"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text15"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_storm"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image9"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text18"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image8"
                        app:layout_constraintStart_toEndOf="@id/text16"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text19"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/two"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text17"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image11"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_storm"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image10"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text20"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image8"
                        app:layout_constraintStart_toEndOf="@id/text18"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/text21"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="@string/three"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text19"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/image12"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_storm"
                        app:layout_constraintTop_toBottomOf="@id/text9"
                        app:layout_constraintStart_toEndOf="@id/image11"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:id="@+id/text22"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/cel"
                        app:layout_constraintTop_toBottomOf="@id/image8"
                        app:layout_constraintStart_toEndOf="@id/text20"
                        android:layout_marginStart="15dp"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>