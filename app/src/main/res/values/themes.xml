<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Main.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="String.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Navigation.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="itemIconTint">@color/teal_700</item>
        <item name="itemTextColor">@color/teal_700</item>
    </style>

    <style name="Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>