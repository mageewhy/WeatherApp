<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="NoActionBar.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Main.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@color/white_bg</item>
    </style>

    <style name="CardView.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@drawable/card_view_dropshadow_w</item>
    </style>
    <style name="HomeCardView.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:background">@drawable/home_weather_card_w</item>
    </style>

    <style name="Search.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/searchview_background_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:searchIcon">@drawable/search_icon_foreground_dark</item>
    </style>

    <style name="String.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Navigation.Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>